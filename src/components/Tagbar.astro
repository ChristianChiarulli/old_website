---
const allPosts = await Astro.glob("../pages/posts/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<div class="tags">
  {
    tags.map((tag) => (
      <a href={`/blog/${tag}/1`}>
        <p class="tag">{tag}</p>
      </a>
    ))
  }
</div>

<style>
  a {
    color: #f3f4f6;
    text-decoration: none;
    font-size: 1.3rem;
  }

  .tags {
    display: flex;
    overflow-x: scroll;
    background-color: #18181b;
    border-radius: 0.8rem;
    gap: 10px;
    margin-bottom: 1rem;
  }

  .tag {
    padding: 0.5rem 1rem;
    margin: 0.5rem 0.5rem;
    border: solid 1px #9ca3af;
    border-radius: 0.8em;
    text-align: center;
    font-size: 0.7em;
    width: 100%;
    white-space: nowrap;
    background-color: #212121;
  }

  .tag:hover {
    color: #60a5fa;
    border: solid 1px #60a5fa;
  }
</style>
